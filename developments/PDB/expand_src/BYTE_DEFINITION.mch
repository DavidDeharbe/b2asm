MACHINE
    BYTE_DEFINITION

SEES
    BIT_DEFINITION ,
    BIT_VECTOR_DEFINITION

CONCRETE_CONSTANTS
    BYTE ,
    BYTE_WIDTH ,
    BYTE_INDEX ,
    BYTE_ZERO

PROPERTIES
    BYTE_WIDTH = 8 &
    BYTE_INDEX = 0 .. ( BYTE_WIDTH - 1 ) &
    BYTE <: BIT_VECTOR &
    BYTE = { vv | vv : BIT_VECTOR & bv_size ( vv ) = BYTE_WIDTH } &
    BYTE_ZERO : BYTE &
    BYTE_ZERO = BYTE_INDEX * { 0 }
END
